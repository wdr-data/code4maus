<!DOCTYPE html>
<html>
    <head>
        <% if(type !== 'image/gif') { %>
        <meta name="twitter:card" content="player" />
        <meta
            name="twitter:player"
            content="<%= apiHost %>/teilen?id=<%= id %>&frame=yes"
        />
        <meta name="twitter:player:width" content="435" />
        <meta name="twitter:player:height" content="331" />
        <% } else { %>
        <meta name="twitter:card" content="summary_large_image" />
        <% } %>
        <meta name="twitter:creator" content="@DieMaus" />
        <meta name="twitter:site" content="@DieMaus" />
        <meta name="twitter:title" content="Die Maus" />
        <meta name="twitter:image" content="<%= baseUrl %><%= imageUrl %>" />
        <meta property="og:site_name" content="Die Maus" />
        <meta property="og:url" content="<%= baseUrl %><%= imageUrl %>" />
        <meta property="og:title" content="Die Maus" />
        <meta property="og:description" content="Programmieren mit der Maus" />

        <meta property="og:type" content="video.other" />
        <meta property="og:image" content="<%= baseUrl %><%= imageUrl %>" />
        <meta property="og:image:type" content="<%= type %>" />
        <meta property="og:image:width" content="435" />
        <meta property="og:image:height" content="331" />

        <base href="<%= baseUrl %>" />
    </head>
    <body>
        <% scripts.forEach((script) => { %>
        <script src="<%= baseUrl %><%= script %>"></script>
        <% }) %>
    </body>
</html>
